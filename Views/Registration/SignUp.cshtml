@model PenaltyCal_7.Models.SignupUser


@{
  ViewData["Title"] = "Sign Up";
}
<h1>@ViewData["Title"]</h1>




  

  <form asp-controller="Registration" asp-action="SignUp" method="post" style="width: 800px;">
   



      <div class="form-group" style="margin-left: 400px;">
      <label asp-for="UserId">UserId:</label>
      <input asp-for="UserId" class="form-control" id="UserId" pattern="[A-Za-z]{2,20}$"
      title="Must contain 20 letters "required >
      </div>

      <div class="form-group" style="margin-left: 400px;">
      <label asp-for="Password">Password:</label>
      <input asp-for="Password" type="password" class="form-control" id="Password"
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}$"
      title="Wrong Pattern. It contain at least one capital letter, one lower letter , one digit, one special characters
      & is at least 8 character long" required>
      </div>

      <div class="form-group" style="margin-left: 400px;">
      <label asp-for="FirstName">FirstName:</label>
      <input asp-for="FirstName" class="form-control" id="FirstName" pattern="[A-Za-z]{2,20}$"
      title="Must contain 20 letters " required>
      </div>

      <div class="form-group" style="margin-left: 400px;">
      <label asp-for="LastName">LastName:</label>
      <input asp-for="LastName" class="form-control" id="LastName" pattern="[A-Za-z]{2,20}$"
      title="Must contain 20 letters " required>
      </div>

      <div class="form-group" style="margin-left: 400px;">
      <label asp-for="RoleId">RoleId:</label>
      <input asp-for="RoleId" class="form-control" id="RoleId" pattern="[A-Za-z]{2,20}$"
      title="Must contain 20 letters "required >
      </div>

      <div class="form-group" style="margin-left: 400px;">
      <label asp-for="TelephoneNumber">TelephoneNumber:</label>
      <input asp-for="TelephoneNumber" class="form-control" id="TelephoneNumber" pattern="^[0-9]{10}$"
      title="Must contain 10 number" required>
      </div>

      <a type="submit" href="/Home" style="margin-left: 400px;">Register</a>

      </form> 

       
          


            