@model PenaltyCal_7.Models.LoginUser

@{
  ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>



<form asp-controller ="Home" asp-action="Index" method="post" style="width: 800px;">
  <div class="form-group" style="margin-left: 400px;">
    <label asp-for="UserId">UserId:</label>
    <input asp-for="UserId" class="form-control" id="UserId" required>
  </div>

  <div class="form-group" style="margin-left: 400px;">
    <label asp-for="Password">Password:</label>
    <input asp-for="Password" type="password" class="form-control" id="Password" required>
  </div>
  <div class="form-group" style="margin-left: 400px;">
    <label asp-for="RoleId">RoleId:</label>
    <input asp-for="RoleId" class="form-control" id="RoleId" required>
  </div>
  <button style="margin-left: 400px;"><a type="submit" href="/Show/Index">Login</a> </button>


  <label>
    <input type="checkbox" checked="checked" name="remember"> Remember me </br>

  </label>
</form>
